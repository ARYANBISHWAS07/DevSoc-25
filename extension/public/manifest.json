{
  "manifest_version": 3,
  "name": "Echo Sign",
  "description": "Web Extension for Real-Time Hand Sign to Text Conversion & Automated Meeting Minutes",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo-2.png",
    "32": "logo-2.png",
    "48": "logo-2.png",
    "128": "logo-2.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"]
}
